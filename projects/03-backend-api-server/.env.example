# ===========================================
# PRODUCTIVITY DASHBOARD API - ENVIRONMENT TEMPLATE
# Copy this file to .env and update the values
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost
API_VERSION=v1
API_PREFIX=/api

# Database Configuration - MongoDB
MONGODB_URI=mongodb://localhost:27017
DB_NAME=productivity_dashboard
DB_HOST=localhost
DB_PORT=27017
DB_USER=
DB_PASS=

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-here
JWT_EXPIRE_TIME=15m
JWT_REFRESH_EXPIRE_TIME=7d

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your-session-secret-here

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:5173

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
ENABLE_MORGAN_LOGGING=true
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=5

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM="Productivity Dashboard <noreply@productivity.com>"

# Testing
TEST_PORT=5001
TEST_DB_NAME=productivity_dashboard_test

# Development Tools
ENABLE_SWAGGER=true
ENABLE_PLAYGROUND=true
ENABLE_CORS_LOGGING=false
